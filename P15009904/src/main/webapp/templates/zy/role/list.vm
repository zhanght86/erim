<div class="doadmin">
	<div class="newfood_suptop mb20">
		<img src="$staticRoot/images/jiaose.png">
		<span>角色管理</span>
		<div class="cb"></div>
		<div class="g_line"></div>
	</div>
	<div class="coadmin_top">
		<form class="form-search" method="post" id="form1">
    		<div class="doadmin_topl" style="margin-top:0;margin-bottom:20px;">
    			<div class="doadmin_toplboxa" style="width:240px;">
    				<span style="width:88px;">角色名:</span>
    				<div class="doadmin_toplbra" style="width:130px;">
    					<input type="text" value="$!cmsSystemRole.zyRoleName" name="zyRoleName" />
    				</div>
    			</div>
    			<button class="doadmin_see" type="button" onclick="index.searchform('form1','$appRoot/zy/role/list');">查询</button>
    		</div>
		</form>
	</div>
	<div class="cb"></div>
	<div class="g_line"></div>
	<div class="doadmin_ct">
		<div class="doadmin_ct_top">
			<div class="carad_ctbtn">
			   <button onclick="index.load('$appRoot/zy/role/insertPage');">+新增角色</button>
            </div>
		</div>
		<div class="doadmin_ct">
			<div class="carad_ct">
				<div class="carad_ctrtable">
					<table cellspacing="0" cellspadding="0">
						<thead>
							<tr>
								<td>序号</td>
        						<td>角色名</td>
        						<td>操作</td>
							</tr>
						</thead>
						<tbody>
							#foreach($item in $userList)
        						<tr>
									<td>$item.id</td>
            			            <td>$!item.zyRoleName</td>
									<td><a href="javascript:index.load('$appRoot/zy/role/updatePage?id=$item.id');">查看/修改</a></td>
    							</tr>
    						#end
					  </tbody>
					</table>
					#parse("common/page.vm")
				</div>
			</div>
		</div>
	</div>
</div>